<?xml version="1.0" encoding="utf-8"?>
<damagePanel version="SDP 0.8.2 R7">

	<!--Настройка фона-->
	<bgStyle alpha="100"/> <!--Значение alpha от 100 до 0, 100 - непрозрачный фон.-->
	
	<!--Настройка индикатора танка-->
	<tankStyle alpha="100"> <!--Значение alpha от 100 до 0, 100 - непрозрачный индикатор.-->		
		<location x="115" y="130" center="false"/> <!--Координаты расположения элемента. center="false" - координаты задаются относительно верхнего левого края панели. center="true" - координата x считается от центра.-->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="0" strength="200"/> <!--Тень. size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени. strength - степень нанесения тени.-->
		<common size="1"/> <!--size - коэффициент масштабирования размера танк-индикатора.-->
		<gun alpha="100"/> <!--Прозрачность орудия.-->
		<turret alpha="100"/> <!--Прозрачность башни.-->
		<hull alpha="100"/> <!--Прозрачность корпуса.-->
		<gunConstraints alpha="100" color="0x999999" ccolor="0xFF0000"/> <!--Настройка индикаторов УГН. color - цвет нормального УГН. ccolor - цвет граничного УГН.-->
	</tankStyle>
	
	<!--Настройка ХП-->
	<hpStyle visible="true"> <!--Значение visible равное "true" означает, что данный элемент будет отображаться, чтобы его скрыть - меняем "true" на "false".-->
		<location x="0" y="23" center="false"/> <!--Координаты расположения элемента. center="false" - координаты задаются относительно верхнего левого края панели. center="true" - координата x считается от центра.-->
		<text font="Cuprum" size="14" color="0xFFFFFF" alpha="100" align="center" bold="false"/> <!--font - шрифт, который должен быть установлен на компьютере. size - размер шрифта. color - цвет шрифта в формате HEX. align - выравнивание текста (left, right, center). bold - жирный тест (true), обычный (false).--> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!--Тень от текста. size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени. strength - степень нанесения тени.-->
		<format>{{hp}} / {{hp-max}}</format> <!--Как будет выглядеть строка со здоровьем танка в игре. Формируется она из т.н макросов.	{{hp}} - текущие ХП. {{hp-max}} - максимальные ХП. {{hp-ratio}} - процент оставшихся ХП. {{dmg}} - общий урон, который нам нанесли. {{dmg-ratio}} - общий урон, который нам нанесли в процентах.-->
	</hpStyle>

	<!--Настройка полоски ХП-->
	<hpBarStyle alpha="100">
		<location x="1" y="22" center="false"/>
		<scale x="1" y="1"/> <!--Масштаб полоски ХП, 1 - стандартный размер.-->
		<color start="0xFD0100" middle="0xFF6700" end="0x009000"/> <!--Начальный, промежуточный и конечный цвет полоски ХП. start - когда ХП на нуле, middle - когда ХП = 50% и end - когда здоровье полное. middle можно убрать, тогда цвет (50% ХП) посчитается автоматически.-->
	</hpBarStyle>	
	
	<!--Настройка лога полученного урона-->
	<logStyle visible="true">
		<location x="235" y="3" center="false"/>
		<text font="Cuprum" size="15" color="0xFFFFFF" alpha="100" align="left" bold="false" leading="5"/> <!--leading - межстрочный интервал.-->
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
		<format>{{count}}:  -{{dmg-one}}</format> <!--Как будет выглядеть строка с логом полученного урона в игре. Формируется она из т.н макросов. {{count}} - порядковый номер нанесенного нам урона. {{dmg-one}} - урон, который нам нанесли одним попаданием. {{dmg-ratio-one}} - урон, который нам нанесли одним попаданием в процентах. {{time-rel}} - время с момента первого попадания. {{time-abs}} - время по игровому таймеру боя.-->
		<direction>up</direction> <!--Направление лога, up - последний урон всегда вверху, down - последний урон всегда внизу.-->
	</logStyle>	
	
	<!--Настройка сообщения о последнем полученном уроне-->
	<hitStyle visible="true">
		<location x="0" y="-50" center="true"/>
		<text font="Cuprum" size="50" color="0xFF0000" alpha="100" align="center" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
		<format>-{{dmg-one}}</format> <!--Как будет выглядеть сообщение с последним полученным уроном в игре. Формируется она из т.н макросов.  {{count}} - порядковый номер нанесенного нам урона. {{dmg-one}} - урон, который нам нанесли одним попаданием. {{dmg-ratio-one}} - урон, который нам нанесли одним попаданием в процентах.-->
		<delay>5</delay> <!--Время, после которого сообщение исчезнет.-->
	</hitStyle>
	
	<!--Настройка сообщения о пожаре-->
	<fireStyle message="true"> <!--message - сообщение. "true" означает, что данный элемент будет отображаться, чтобы его скрыть - меняем "true" на "false"-->
		<location x="0" y="-100" center="true"/>
		<text font="Cuprum" size="50" color="0xFF0000" alpha="100" align="center" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
		<format>Nádrž je v plamenech!!</format> <!--Текст, который будет отображаться при поджоге нашего танка.-->
	</fireStyle>
	
	<!--Настройка иконки пожара-->
	<iconStyle animation="true"> <!--animation - переключатель иконки пожара, true - анимация, false - статичная иконка, если при пожаре проседает ФПС, лучше включить статичную иконку.-->
		<location x="115" y="60" center="false"/> <!--Положение статичной иконки пожара.-->
		<common size="1" color="0xFF0000"/> <!--size - коэффициент масштабирования размера статичной иконки пожара, 1 - стандартный размер. color - цвет иконки пожара.-->
	</iconStyle>
	
	<!--Настройка скорости-->
	<speedStyle visible="true">
		<location x="62" y="61" center="false"/>
		<text font="Cuprum" size="15" color="0xFFFFFF" alpha="100" align="left" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
	</speedStyle>
	
	<!--Настройка единиц скорости-->
	<unitStyle visible="true">
		<location x="62" y="49" center="false"/>
		<text font="Cuprum" size="10" color="0xFFFFFF" alpha="100" align="left" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
		<format>km/h</format> <!--Текст, который отображается над значением скорости.-->
	</unitStyle>
	
	<!--Настройка таймера ремонта-->
	<repairStyle visible="true">
		<location x="0" y="7"/>
		<text font="Cuprum" size="25" color="0xFFFFFF" alpha="100" align="center" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
	</repairStyle>
	
	<!--Настройка имени игрока-->
	<playerStyle visible="true">
		<location x="4" y="3" center="false"/>
		<text font="Cuprum" size="14" color="0xFFFFFF" alpha="100" align="left" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
	</playerStyle>
	
	<!--Настройка названия танка-->
	<vehicleStyle visible="true">
		<location x="116" y="3" center="false"/>
		<text font="Cuprum" size="14" color="0xFFFFFF" alpha="100" align="right" bold="false"/> 
		<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/>
	</vehicleStyle>
	
	<!--Настройка модулей-->
	<moduleStyle alpha="50"> <!--alpha - Настройка прозрачности иконки неповрежденного модуля. Значение alpha от 100 до 0, 100 - непрозрачная иконка.-->
		<!--Двигатель-->
		<engine>
			<location x="4" y="42" center="false"/>
		</engine>
		<!--Боеукладка-->
		<ammoBay>
			<location x="4" y="82" center="false"/>
		</ammoBay>
		<!--Орудие-->
		<gun>
			<location x="4" y="122" center="false"/>
		</gun>
		<!--Башня-->
		<turretRotator>
			<location x="4" y="162" center="false"/>
		</turretRotator>
		<!--Шасси-->
		<chassis>
			<location x="180" y="42" center="false"/>
		</chassis>
		<!--Триплекс-->
		<surveyingDevice>
			<location x="180" y="82" center="false"/>
		</surveyingDevice>
		<!--Радио-->
		<radio>
			<location x="180" y="122" center="false"/>
		</radio>
		<!--Баки-->
		<fuelTank>
			<location x="180" y="162" center="false"/>
		</fuelTank>
	</moduleStyle>
	
	<!--Настройка экипажа-->
	<crewStyle alpha="75"> <!--alpha - настройка прозрачности иконки неповрежденного экипажа. Значение alpha от 100 до 0, 100 - непрозрачная иконка.-->
		<location x="230" y="202"/>
	</crewStyle>
	
	<!--Настройка иконки фиксации корпуса-->
	<lockStyle> 
		<location x="142" y="52" center="false"/>
		<common size="1"/> <!--size - коэффициент масштабирования размера иконки, 1 - стандартный размер.-->
	</lockStyle>
	
	<!--Настройка круиз-контроля-->
	<cruiseStyle alpha="100"> <!--Значение alpha от 100 до 0, 100 - непрозрачная иконка.-->
		<location x="36" y="80" center="false"/>		
	</cruiseStyle>
	
	<!--Настройка панели снарядов-->
	<consumablesPanel>
		<location y="58"/>
	</consumablesPanel>
	
	<!--Настройка панели сообщения о выведенных из строя модулях и экипаже-->
	<vehicleMessagesPanel>
		<location y="68"/>
	</vehicleMessagesPanel>
	
	<!--Настройка чата-->
	<battleMessenger>
		<location x="0" y="622"/>
	</battleMessenger>
	
</damagePanel>