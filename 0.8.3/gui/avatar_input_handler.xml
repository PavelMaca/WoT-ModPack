<avatar_input_handler.xml>
  <postMortemMode>
    <camera>
      <keySensitivity>0.025</keySensitivity>
      <sensitivity>0.0025</sensitivity>
      <scrollSensitivity>5</scrollSensitivity>
      <angleRange>10 110</angleRange>
      <distRange>2 25</distRange> <!-- Высота камеры после смерти МИН/МАКС -->
    </camera>
  </postMortemMode>
  <arcadeMode>
    <aim>arcade</aim>
    <numScrolls>1</numScrolls>
    <camera>
      <keySensitivity>0.025</keySensitivity>
      <sensitivity>0.0025</sensitivity>
      <scrollSensitivity>5</scrollSensitivity>
      <angleRange>10 110</angleRange>
      <distRange>2 25</distRange> <!-- Высота камеры в аркадном режиме МИН/МАКС -->
      <noscroll>true</noscroll> <!-- Включение/выключение noscroll мода для аркадного режима true/false-->
    </camera>
  </arcadeMode>
  <strategicMode>
    <aim>strategic</aim>
    <camera>
      <keySensitivity>0.5</keySensitivity>
      <sensitivity>0.05</sensitivity>
      <scrollSensitivity>0.25</scrollSensitivity>
      <distRange>40 100</distRange> <!-- Высота камеры в артиллерийском режиме МИН/МАКС -->
      <noscroll>true</noscroll> <!-- Включение/выключение noscroll мода для арт режима true/false-->
    </camera>
  </strategicMode>
  <sniperMode>
    <aim>sniper</aim>
    <binoculars>
      <background>gui/maps/ingame/aim/binoculars.dds</background>
    </binoculars>
    <numScrolls>1</numScrolls>
    <camera>
      <keySensitivity>0.01</keySensitivity>
      <sensitivity>0.005</sensitivity>
      <scrollSensitivity>0.0025</scrollSensitivity>
      <zoomX4>true</zoomX4> <!-- Включение 4х кратного увеличения в снайперсок режиме true/false -->
      <zooms>2 4 8</zooms> <!-- Настройка шага увеличения стандартного снайперского зума -->
      <zooms2>2 4 8 10</zooms2> <!-- Настройка шага увеличения 4х кратного снайперского зума -->
      <noscroll>true</noscroll> <!-- Включение/выключение noscroll мода для снайперского режима true/false-->
    </camera>
  </sniperMode>
</avatar_input_handler.xml>