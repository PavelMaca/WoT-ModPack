			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#929290</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<CreditTotal>					<!-- Total per session (credits) -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->			
				<ColorPlus>#00EE00</ColorPlus>				<!-- [#ffffff] Color of a positive result -->
				<ColorMinus>#EE0000</ColorMinus>			<!-- [#ffffff] Color of a negative result -->
			</CreditTotal>
			<CreditBattle>					<!-- Total per session (credits for fighting) -->
				<Visible>false</Visible>						<!-- [true|false] Visible (credits for fighting) -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->			
				<Color>#FFFFFF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
			</CreditBattle>
			<CreditBuySale>					<!-- Total per session (credit transactions Buy / Sell) -->
