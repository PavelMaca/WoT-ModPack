			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#CDC673</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<Credit>						<!-- Credits -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFFFFF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Credit>
		</Repair>
		<Ammunition>						<!-- Ammunition -->
			<Visible>true</Visible>							<!-- [true|false] Visible -->
			<Title>Munice:</Title>						<!-- [s] Title text -->
			<Bold>false</Bold>								<!-- [true|false] Bold -->
			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#CDC673</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<Credit>						<!-- Credits -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFFFFF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Credit>
			<Gold>							<!-- Gold -->
				<Bold>false</Bold>							<!-- [true|false] Visible -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFE769</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Gold>
		</Ammunition>
		<Equipment>							<!-- Equipment -->
			<Visible>true</Visible>							<!-- [true|false] Visible -->
			<Title>Sp.dop.:</Title>						<!-- [s] Title text -->
			<Bold>false</Bold>								<!-- [true|false] Bold -->
			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#CDC673</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<Credit>						<!-- Credits -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFFFFF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Credit>
			<Gold>							<!-- Gold -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFE769</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Gold>
		</Equipment>
		<Total>								<!-- Total -->
			<Visible>true</Visible>							<!-- [true|false] Visible -->
			<Title>Zisk:</Title>							<!-- [s] Title text -->
			<Bold>true</Bold>								<!-- [true|false] Bold -->
			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#CDC673</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<Credit>						<!-- Credits -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<ColorPlus>#00EE00</ColorPlus>				<!-- [#ffffff] Color of a positive result -->
				<ColorMinus>#EE0000</ColorMinus>			<!-- [#ffffff] Color of a negative result -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Credit>
			<Gold>							<!-- Gold -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<ColorPlus>#00EE00</ColorPlus>				<!-- [#ffffff] Color of a positive result -->
				<ColorMinus>#EE0000</ColorMinus>			<!-- [#ffffff] Color of a negative result -->
				<Icon>2</Icon>								<!-- [0|1|2] Icon: 0-Hide, 1-Front, 2-After -->
			</Gold>			
		</Total>
		<ExperienceAction>					<!-- Опыт по акции -->
			<Visible>true</Visible>							<!-- [true|false] Видимость секции -->
			<Title>Akce:</Title>							<!-- [s] текст заголовка -->
			<Bold>false</Bold>								<!-- [true|false] Жирный шрифт -->
			<FontSize>12</FontSize>							<!-- [n] Размер шрифта -->
			<Color>#00FFFF</Color>							<!-- [#ffffff] Цвет в 16-ричной системе исчисления -->
