				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Percent>50</Percent>						<!-- [n] Percentage of color change -->
				<ColorPlus>#00EE00</ColorPlus>				<!-- [#ffffff] Color when the result is greater than or equal to the percentage -->
				<ColorMinus>#EE0000</ColorMinus>			<!-- [#ffffff] Color when the result is lesser than the percentage -->
			</BattleVictory>
			<BattleDrawGame>				<!-- Battle draws -->
				<Visible>true</Visible>						<!-- [true|false] Visibility (Draws) -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#EE00EE</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
			</BattleDrawGame>
			<BattleTotal>					<!-- Total battles -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Color>#FFFF00</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
			</BattleTotal>
			<VictoryPercent>				<!-- Victory percent -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->
				<Rounding>2</Rounding>						<!-- [0...100] Accuracy percentage of victories, number of decimal separator -->
				<Percent>50</Percent>						<!-- [n] Percentage of color change -->
				<ColorPlus>#00EE00</ColorPlus>				<!-- [#ffffff] Color when the result is greater than or equal to the percentage -->
				<ColorMinus>#EE0000</ColorMinus>			<!-- [#ffffff] Color when the result is lesser than the percentage -->
			</VictoryPercent>
		</Battle>
		<Experience>						<!-- Experience -->
			<Visible>true</Visible>							<!-- [true|false] Visible -->
			<Title>Zkušenosti:</Title>								<!-- [s] Title text -->
			<Bold>false</Bold>								<!-- [true|false] Bold -->
			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#929290</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
			<ExperienceAverage>				<!-- Average Experience per session -->
				<Bold>true</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->			
				<Color>#1E90FF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
			</ExperienceAverage>
			<BattleExperience>				<!-- Experience per session -->
				<Bold>false</Bold>							<!-- [true|false] Bold -->
				<FontSize>12</FontSize>						<!-- [n] Font size -->			
				<Color>#1E90FF</Color>						<!-- [#ffffff] Color in 16-hexadecimal -->
			</BattleExperience>
		</Experience>
		<ExperienceX1>						<!-- Experience is shown as X1 -->
			<Visible>false</Visible>							<!-- [true|false] Visible -->
			<Title>Exp (x1):</Title>						<!-- [s] Title text -->
			<Bold>false</Bold>								<!-- [true|false] Bold -->
			<FontSize>12</FontSize>							<!-- [n] Font size -->
			<Color>#929290</Color>							<!-- [#ffffff] Color in 16-hexadecimal -->
