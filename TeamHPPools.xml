<?xml version='1.0'  encoding='UTF-8'?>
<TeamHPPools_config>
<!-- Display with healthbars or just text, true or false / отключить полосы хп, значение false -->
<ShowHealthBar>true</ShowHealthBar>

<!-- Text describing allied team hp pool. / Текстовое поле союзников -->
<alliestext>$teamHP&#032;</alliestext>

<!-- Text describing opposed team hp pool. / Текстовое поле Противников -->
<enemiestext>&#032;$enemyHP&#032;&#032;&#032;&lt;tab&gt;&#032;&lt;tab&gt;&#032;&#032;&lt;img src='img://gui/maps/icons/achievement/32x32/mainGun.png' width='24' height='24' align='middle' vspace='-8'&gt;$HCvalue </enemiestext>

<!-- Symbol the healthbar is made up of. " &#x2588; " / Символ полосы ХП -->
<healthbar>&lt;font face='Arial' size='18'&gt;&#x2593;&lt;/font&gt;</healthbar> 

<!-- Color of the Allied healthbar in HEX. Default is 80FF00 / Цвет союзников-->
<AlliedBarColor>9DFF59</AlliedBarColor>

<!-- Color of the Enemy healthbar in HEX. Default is EF0101 / Цвет противника-->
<EnemyBarColor>EF4545</EnemyBarColor>

</TeamHPPools_config>

