<dm>
	<!--=========================================-->
	<!--========= СНАЙПЕРСКОЕ СВЕДЕНИЕ ==========-->
	<!--=========================================-->
    <svedenie_as>
 	<!--=========================================-->
	<!--================= МАРКЕР ================-->
	<!--=========================================-->
	<center>
			<location rotation="0"/> <!-- rotation - угол поворота элемента -->
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color color="0xffffff"/> <!-- color - цвет маркера орудия -->
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</center>
	<!--=========================================-->
	<!--======== ОКРУЖНОСТЬ СВЕДЕНИЯ ============-->
	<!--=========================================-->
	<circle>
			<color reloaded="0x00ff00" reloading="0xff0000" reloadingBack="0x000000"/> <!-- reloaded - цвет окружности сведения при заряженном орудии. reloading - цвет окружности сведения во время перезарядки орудия, reloadingBack - цвет окружности-подложки-->			
			<thickness value="1"/> <!-- thickness - толщина сведения (доступные значения 1-4). При значении = 1, сведение работает в стандартном режиме и в настройках инры можно выбрать одно из 3х разных сведений. При значении 2-4 - увеличивается толщина сведения (3,4,5 px соответственно) при этом в настройках игры доступно лишь одно сведение. -->
			<fill color="0xffffff" alpha="20"/>  <!-- настройка заливки сведения. color - цвет заливки, alpha - прозрачность заливки. -->
	</circle>
	<!--=========================================-->
	<!--====== БРОНЕПРОБИТИЕ ТЕКСТОВОЕ ==========-->
	<!--=========================================-->
	<probitie visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="-60" y="0"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от перекрестия(центральный маркер) -->
			<text font="MicraC" size="15" angle ="0" alpha="100" align="center" bold="false" leading="0" width="120" height="20"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля, angle - поворот поля-->
			<filter size="1" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
	</probitie>
	</svedenie_as>
	
	 <!--=========================================-->
	<!--======== АРТИЛЛЕРИЙСКОЕ СВЕДЕНИЕ ========-->
	<!--=========================================-->
	<svedenie_art>
	<!--=========================================-->
	<!--======= ГРАНИЧНЫЕ ТОЧКИ СВЕДЕНИЯ ========-->
	<!--=========================================-->
	<xpoint>
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="300"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color reload="0xff0000" reloading="0x00ff00"/> <!-- reloaded - цвет точек сведения при заряженном орудии. reloading - цвет точек сведения во время перезарядки орудия-->			
			<scale x="150" y="150"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</xpoint>
	<!--=========================================-->
	<!--======= ОСНОВНЫЕ ТОЧКИ СВЕДЕНИЯ =========-->
	<!--=========================================-->
	<point>
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="300"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color reload="0x00ff00" reloading="0xff0000"/> <!-- reloaded - цвет точек сведения при заряженном орудии. reloading - цвет точек сведения во время перезарядки орудия-->			
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</point>
	<!--=========================================-->
	<!--================= МАРКЕР ================-->
	<!--=========================================-->
	<center>
			<type type="4"/> <!--тип маркера (1-7)-->
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color color="0x0000ff"/> <!-- color - цвет маркера сведения -->
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
			<!-- Виды маркеров 1-кольцо, 2-галка, 3-"вспышка", 4-точка, 5-крест, 6-полукрест, 7-крест без центра -->
	</center>
	
	</svedenie_art>
  </dm>
  